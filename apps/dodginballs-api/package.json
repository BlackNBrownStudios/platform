{
  "name": "@platform/dodginballs-api",
  "version": "1.0.0",
  "description": "Backend API for DodginBalls - a multiplayer dodgeball game with analytics",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "JWT_SECRET=test_jwt_secret jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "jest -i --watchAll",
    "test:debug": "JWT_SECRET=test_jwt_secret jest -i --colors --verbose --detectOpenHandles --no-silent",
    "coverage": "jest -i --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "game",
    "api",
    "kubernetes",
    "dodginballs"
  ],
  "author": "DodginBalls Team",
  "license": "MIT",
  "dependencies": {
    "@platform/auth-backend": "workspace:*",
    "@platform/backend-core": "workspace:*",
    "@platform/leaderboards": "workspace:*",
    "@platform/types": "workspace:*",
    "axios": "^1.8.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "http-status": "^1.8.1",
    "joi": "^17.9.2",
    "mongoose": "^7.3.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mongodb-memory-server": "^10.1.4",
    "node-mocks-http": "^1.13.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4"
  }
}
