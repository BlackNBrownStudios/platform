# Environment Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017/history-time

# JWT Secret and Expiration
JWT_SECRET=your-jwt-secret-here
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=30
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=10

# Client URL for email verification and password reset
CLIENT_URL=http://localhost:3000

# Email Configuration (you can use services like SendGrid, Mailgun, etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-password
EMAIL_FROM=no-reply@historyapp.com
