{
  "name": "@platform/history-time-api",
  "version": "1.0.0",
  "description": "Backend API for History Time - an interactive historical learning platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "test": "NODE_ENV=test PORT=5001 jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "NODE_ENV=test PORT=5001 jest -i --watchAll",
    "test:docker": "docker-compose -f docker-compose.test.yml up -d && npm test && docker-compose -f docker-compose.test.yml down",
    "coverage": "NODE_ENV=test PORT=5001 jest -i --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed:cards": "node src/seeds/seed-cards.js",
    "seed:events": "node src/seeds/seed-historical-events.js",
    "seed:diverse-events": "node src/seeds/seed-diverse-historical-events.js",
    "convert:events": "node src/scripts/convert-events-to-cards.js 1000",
    "manage:events": "node src/scripts/manage-historical-events.js",
    "verify:cards": "node src/scripts/verify-all-cards.js",
    "check:db": "node src/scripts/check-db-status.js",
    "balance:cards": "node src/scripts/balance-card-difficulty.js",
    "scrape:events": "node src/scripts/scrape-historical-events.js --force",
    "scrape:ancient": "node src/scripts/scrape-historical-events.js scrape-batch ancient --force",
    "scrape:science": "node src/scripts/scrape-historical-events.js scrape-batch science --force",
    "scrape:modern": "node src/scripts/scrape-historical-events.js scrape-batch modern --force",
    "scrape:stats": "node src/scripts/scrape-historical-events.js stats",
    "scrape:convert": "node src/scripts/scrape-historical-events.js convert --force",
    "scrape:all": "npm run scrape:ancient && npm run scrape:science && npm run scrape:modern && npm run scrape:convert",
    "seed:all": "npm run seed:cards && npm run seed:events && npm run convert:events",
    "seed:complete": "npm run manage:events all --diverse",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check ."
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "history",
    "timeline",
    "game",
    "api"
  ],
  "author": "History Time Team",
  "license": "MIT",
  "dependencies": {
    "@platform/auth-backend": "workspace:*",
    "@platform/backend-core": "workspace:*",
    "@platform/types": "workspace:*",
    "axios": "^1.8.4",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "http-status": "^1.8.1",
    "jsdom": "^26.0.0",
    "mongoose": "^7.3.0",
    "multer": "^1.4.5-lts.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.3.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.17",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "faker": "^5.5.3",
    "glob": "^11.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mongodb": "^6.17.0",
    "mongodb-memory-server": "^10.1.4",
    "node-mocks-http": "^1.13.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
